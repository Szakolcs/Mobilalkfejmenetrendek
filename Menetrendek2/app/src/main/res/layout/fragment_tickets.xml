<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.tickets.TicketsFragment">

    <FrameLayout
        android:id="@+id/frame"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="@color/red"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/gunterz_bold"
            android:text="Did not validate ticket."
            android:textAlignment="center"
            android:textSize="30sp" />

    </FrameLayout>

    <RelativeLayout
        android:id="@+id/tickets_relative"
        android:layout_width="match_parent"
        android:layout_height="655dp"
        app:layout_constraintTop_toBottomOf="@id/frame">

        <TextView
            android:id="@+id/my_tickets"
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="50dp"
            android:text="Number of tickets:"
            android:layout_marginHorizontal="20dp"

            android:textSize="30sp" />

        <TextView
            android:id="@+id/tv_num_tickets"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/my_tickets"
            android:text="@string/placeholder"
            android:layout_marginHorizontal="20dp"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/buy_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_num_tickets"
            android:text="Buy Tickets"
            android:textSize="25sp"
            android:layout_marginTop="80dp"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:fontFamily="@font/gunterz_bold" />

        <TextView
            android:id="@+id/num_buy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/buy_title"
            android:text="@string/placeholder"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:layout_marginTop="30dp"
            android:textAlignment="center" />

        <com.google.android.material.slider.RangeSlider
            android:id="@+id/slider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="40dp"
            android:layout_below="@id/num_buy"
            android:layout_marginTop="20dp"
            android:value="3"
            android:valueFrom="1"
            android:stepSize="1"
            android:valueTo="10"
            app:thumbColor="@color/bkk_purple"
            />

        <TextView
            android:id="@+id/total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/slider"
            android:text="Total:"
            android:textSize="40sp"
            android:layout_marginTop="40dp"
            android:layout_marginHorizontal="20dp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/sziaakos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/total"
            android:text="@string/placeholder"
            android:layout_below="@id/slider"
            android:textSize="30sp"
            android:layout_marginTop="50dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginStart="100dp"/>

        <FrameLayout
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_below="@id/total"
            android:background="@color/black"
            android:layout_marginHorizontal="17dp"/>

        <Button
            android:id="@+id/buy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/line"
            android:layout_centerHorizontal="true"
            android:text="@string/buy"
            android:fontFamily="@font/gunterz_bold"
            android:paddingTop="7dp"
            android:background="@drawable/btn_purple"
            android:textSize="20sp"
            android:layout_marginTop="20dp"/>
    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>